<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Home Page</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>

  <div class="home-container">
  <!-- Top Banner with Image -->
  <div class="top-banner">
    <img src="/images/banner2.PNG" alt="Banner Image" class="banner-image">
  </div>
  
  <nav>
    <% if (user) { %>
      <a href="/users/profile">My Account</a>
      <a href="/auth/sign-out">Log Out</a>
    <% } else { %>
      <a href="/auth/sign-in">Sign In</a>
      <a href="/auth/sign-up">Sign Up</a>
    <% } %>
  </nav>

  <h1>Welcome, <%= user ? user.username : 'guest' %>!</h1>

  <div class="tab">
    <button class="tablinks" onclick="openTab(event, 'BrowseListings')" id="defaultOpen">Browse Listings</button>
    <% if (user) { %>
      <button class="tablinks" onclick="openTab(event, 'MyListings')" id="myListingsTab">My Listings</button>
      <button class="tablinks" onclick="openTab(event, 'CreateListing')" id="createListingTab">Create Listing</button>
    <% } %>
  </div>

  <div id="BrowseListings" class="tabcontent">
    <h3>Browse Listings</h3>
    <!-- Content for Browse Listings will be loaded here -->
  </div>

  <% if (user) { %>
    <div id="MyListings" class="tabcontent">
      <h3>My Listings</h3>
      <!-- Content for My Listings will be loaded here -->
    </div>

    <div id="CreateListing" class="tabcontent">
      <h3>Create New Listing</h3>
      <!-- Content for Create Listing will be loaded here -->
    </div>
  <% } %>

  <script>
    function openTab(evt, tabName) {
      var i, tabcontent, tablinks;

      // Hide all tab content
      tabcontent = document.getElementsByClassName("tabcontent");
      for (i = 0; i < tabcontent.length; i++) {
        tabcontent[i].style.display = "none"; // Hide all content
      }

      // Remove the 'active' class from all tab buttons
      tablinks = document.getElementsByClassName("tablinks");
      for (i = 0; i < tablinks.length; i++) {
        tablinks[i].className = tablinks[i].className.replace(" active", "");
      }

      // Show the selected tab content
      document.getElementById(tabName).style.display = "block";

      // Set the button as active if an event is triggered
      if (evt) {
        evt.currentTarget.className += " active";
      } else {
        // If no event, set the appropriate button as active (e.g., on page load)
        document.getElementById(tabName === 'MyListings' ? 'myListingsTab' : tabName === 'CreateListing' ? 'createListingTab' : 'defaultOpen').className += " active";
      }

      // Load content based on the tab
      if (tabName === 'BrowseListings') {
        loadBrowseListings();
      } else if (tabName === 'MyListings') {
        loadMyListings();
      } else if (tabName === 'CreateListing') {
        loadCreateListing();
      }
    }

    function loadBrowseListings() {
      fetch('/listings/browse?noNavbar=true')
        .then(response => response.text())
        .then(html => {
          document.getElementById('BrowseListings').innerHTML = html;
        });
    }

    function loadMyListings() {
      fetch('/users/my-listings?noNavbar=true')
        .then(response => response.text())
        .then(html => {
          document.getElementById('MyListings').innerHTML = html;
        });
    }

    function loadCreateListing() {
      fetch('/listings/new?noNavbar=true')
        .then(response => response.text())
        .then(html => {
          document.getElementById('CreateListing').innerHTML = html;
        });
    }

    // Automatically open the correct tab based on the query parameter
    document.addEventListener("DOMContentLoaded", function() {
      const urlParams = new URLSearchParams(window.location.search);
      const tab = urlParams.get('tab') || 'BrowseListings';  // Default to BrowseListings
      openTab(null, tab);  // Open tab without event
    });
  </script>
</body>
</html>
